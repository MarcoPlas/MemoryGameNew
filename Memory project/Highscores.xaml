<Page x:Class="Memory_project.Highscores"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Memory_project"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Highscores">

    <Page.Background>
        <ImageBrush ImageSource="Images/Harry Potter Background.jpg" Opacity="1"/>
    </Page.Background>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Label HorizontalContentAlignment="Center" Background="Gray">Spelers</Label>
            <Label HorizontalContentAlignment="Center" Grid.Column="2" Background="Gray">Score</Label>
            <Label HorizontalContentAlignment="Center" Background="White" Grid.Row="1" Name="Highestscoresname"></Label>
            <Label HorizontalContentAlignment="Center" Background="White" Grid.Column="2" Grid.Row="1" Name="Highestscore"></Label>
            <Label HorizontalContentAlignment="Center" Background="White" Grid.Row="2" Name="lowestscoresname1"></Label>
            <Label HorizontalContentAlignment="Center" Background="White" Grid.Column="2" Grid.Row="2" Name="lowestscore1"></Label>

        </Grid>
        <Grid Grid.Column="1" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Label HorizontalContentAlignment="Center" Background="White" Grid.Row="0" Name="Highestscoresname1"></Label>
            <Label HorizontalContentAlignment="Center" Background="White" Grid.Column="1" Grid.Row="1" Name="lowestscore2"></Label>
            <Label HorizontalContentAlignment="Center" Background="White" Grid.Row="1" Name="lowestscoresname2"></Label>
            <Label HorizontalContentAlignment="Center" Background="White" Grid.Column="1" Grid.Row="0" Name="hightscore1"></Label>

        </Grid>

        <Grid Grid.Column="2" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="40*"/>
                <ColumnDefinition Width="30*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="30*"/>
            </Grid.RowDefinitions>
            <Viewbox Grid.Row="1" Grid.Column ="1" Stretch="Uniform">
                <Button Click="Back_Home_Screen" MinWidth="100" MinHeight="20" Grid.Row="2">Terug</Button>
            </Viewbox>
        </Grid>
        <Viewbox Grid.ColumnSpan="3" HorizontalAlignment="Center">
            <Label Content="Highscores" Foreground="White"/>
        </Viewbox>

    </Grid>

</Page>
